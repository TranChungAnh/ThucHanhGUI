<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#00FF0A"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
           android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:text="CHƯNG TRÌNH TÍNH CHỈ SỐ BMI" />
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_weight="3"
            android:id="@+id/textView22"
            android:layout_width="31dp"
            android:layout_height="wrap_content"
            android:text="Nhập tên :" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/edtTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:ems="10"
            android:inputType="text"
            android:text="" />

    </TableRow>
    <TableRow
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_weight="3"
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chiều cao :" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/edtchieucao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="15dp"
            android:inputType="text"
            android:text="" />

    </TableRow>
    <TableRow
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_weight="3"
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cân năng :" />

        <EditText

            android:layout_weight="1"
            android:id="@+id/edtCannang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="15dp"
            android:inputType="text"
            android:text="" />

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
         android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/buttonchuandoan"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="40dp"
            android:text="Button" />
    </TableRow>
<TableRow
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:layout_marginTop="10dp"
    >

    <TextView
        android:layout_weight="3"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI :" />

    <EditText
        android:layout_weight="1"
        android:id="@+id/edtBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="" />
</TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_weight="3"
            android:id="@+id/textView55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuẩn đoán :" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/edtchuandoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="" />
    </TableRow>
</TableLayout>